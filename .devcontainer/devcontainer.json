{
  "name": "RoboBotRPG Codespace",
  "image": "mcr.microsoft.com/vscode/devcontainers/typescript-node:0-18",
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  // Install dependencies in both subfolders after container is created
  "postCreateCommand": "cd RobobotRPG-api && npm install && cd ../robobotrpgweb-client && npm install",
  // Automatically start both dev servers on container start
  "postStartCommand": "bash -lc \"cd RobobotRPG-api && npm run dev & cd ../robobotrpgweb-client && npm run dev &\"",
  // Expose client (3000) and API (3001)
  "forwardPorts": [3000, 3001],
  "updateContentCommand": "npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "remoteEnv": {
  "PORT": "${PORT}",
  "DSN": "${DSN}",
  "CLIENT_SECRET": "${CLIENT_SECRET}",
  "CLIENT_ID": "${CLIENT_ID}",
  "DISCORD_BOT_TOKEN": "${DISCORD_BOT_TOKEN}",
  "CALLBACK_URL": "${CALLBACK_URL}"
}
} 