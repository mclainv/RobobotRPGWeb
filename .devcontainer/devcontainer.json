{
  "name": "RoboBotRPG Codespace",
  "image": "mcr.microsoft.com/vscode/devcontainers/typescript-node:0-20",
  // "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "postCreateCommand": "npm install --prefix RobobotRPG-api && npm install --prefix robobotrpgweb-client",
  "postStartCommand": "bash /workspace/run.sh",
  "remoteEnv": {
    "API_PORT": "${API_PORT}",
    "SITE_URL": "${SITE_URL}",
    "API_URL": "${API_URL}",
    "SITE_PORT": "${SITE_PORT}",
    "DISCORD_API_URL": "${DISCORD_API_URL}",
    "DSN": "${DSN}",
    "CLIENT_SECRET": "${CLIENT_SECRET}",
    "CLIENT_ID": "${CLIENT_ID}",
    "DISCORD_BOT_TOKEN": "${DISCORD_BOT_TOKEN}",
    "CALLBACK_URL": "${CALLBACK_URL}"
  },
  "forwardPorts": [3000, 3001],
  "portsAttributes": {
    "3000": {
        "label": "Application",
        "onAutoForward": "openPreview"
    },
    "3001": {
        "label": "API"
    }
}
} 